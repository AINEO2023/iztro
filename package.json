{
  "name": "@sylarlong/astro",
  "version": "0.0.2",
  "description": "Astrolabe generator of The Purple Star Astrology (Zi Wei Dou Shu).",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylarLong/astro.git"
  },
  "keywords": [
    "zi wei dou shu",
    "紫微斗数",
    "the purple astorlabe",
    "排盘",
    "紫微斗数排盘",
    "星盘生成",
    "紫微斗数命盘"
  ],
  "author": "SylarLong (sylarlong@gmail.com, alsogood@qq.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SylarLong/astro/issues"
  },
  "homepage": "https://github.com/SylarLong/astro#readme",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  }
}
